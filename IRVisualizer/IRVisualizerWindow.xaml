<Window x:Class="IRVisualizer.IRVisualizerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IRVisualizer"
        mc:Ignorable="d"
        Title="IR Visualizer" Height="800" Width="800">
    <Grid>
        <Canvas x:Name="theCanvas" Background="Black">
            <Ellipse x:Name="a" Height="20" Width="20" Fill="Green" />
            <Ellipse x:Name="b" Height="20" Width="20" Fill="Blue" />
            <Ellipse x:Name="c" Height="20" Width="20" Fill="Red" />
            <Ellipse x:Name="d" Height="20" Width="20" Fill="Orange" />

            <Ellipse x:Name="center" Height="20" Width="20" Fill="White" Canvas.Left="390" Canvas.Top="390"/>
        </Canvas>

    </Grid>
</Window>
